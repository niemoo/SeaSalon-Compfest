generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Roles {
  id    Int     @id @default(autoincrement())
  name  String
  users Users[]
  Admin Admin[]
}

model Users {
  id           String         @id @default(uuid())
  full_name    String
  email        String         @unique
  phone_number String
  password     String
  roleId       Int?
  roles        Roles?         @relation(fields: [roleId], references: [id])
  reservations Reservations[]
  reviews      Reviews[]
}

model Admin {
  id           String @id @default(uuid())
  full_name    String
  email        String @unique
  phone_number String
  password     String
  roleId       Int?
  roles        Roles? @relation(fields: [roleId], references: [id])
}

model Branches {
  id            Int             @id @default(autoincrement())
  name          String
  location      String
  opening_time  String          @db.VarChar(5)
  closing_time  String          @db.VarChar(5)
  reservations  Reservations[]
  BranchService BranchService[]
}

model Reservations {
  id           Int       @id @default(autoincrement())
  name         String
  phone_number String
  date         DateTime  @db.Date
  time         String    @db.VarChar(5)
  userId       String?
  serviceId    Int?
  branchId     Int?
  Users        Users?    @relation(fields: [userId], references: [id])
  services     Services? @relation(fields: [serviceId], references: [id])
  branches     Branches? @relation(fields: [branchId], references: [id])
}

model Services {
  id            Int             @id @default(autoincrement())
  name          String
  durations     Int
  reservations  Reservations[]
  BranchService BranchService[]
}

model Reviews {
  id          Int    @id @default(autoincrement())
  star_rating Int
  comment     String
  userId      String
  user        Users  @relation(fields: [userId], references: [id])
}

model BranchService {
  branchId  Int
  serviceId Int
  branch    Branches @relation(fields: [branchId], references: [id])
  service   Services @relation(fields: [serviceId], references: [id])

  @@id([branchId, serviceId])
}
